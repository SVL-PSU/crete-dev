dist:
	@test -d .tmp/crete_hook.test1.0.0 || mkdir -p .tmp/crete_hook.test1.0.0
	$(COPY_FILE) --parents $(DIST) .tmp/crete_hook.test1.0.0/ && (cd `dirname .tmp/crete_hook.test1.0.0` && $(TAR) crete_hook.test1.0.0.tar crete_hook.test1.0.0 && $(COMPRESS) crete_hook.test1.0.0.tar) && $(MOVE) `dirname .tmp/crete_hook.test1.0.0`/crete_hook.test1.0.0.tar.gz . && $(DEL_FILE) -r .tmp/crete_hook.test1.0.0


